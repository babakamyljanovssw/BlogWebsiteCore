@model BlogWebsiteCore.ViewModels.CreateRoleViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Create New Role</title>
    <link href="~/css/LoginRegister.css" rel="stylesheet" />
    <style>
        .col-md-4 {
            height: 400px;
        }
        .mybtn {
            width: 200px;
        }
    </style>
</head>
<body>
    <div class="col-md-4">
        <form asp-action="CreateRole" method="post">
            <h1 style="margin-top: 35px;">Create Role</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mybtn">Create Role</button>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>